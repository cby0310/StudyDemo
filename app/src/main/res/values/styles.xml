<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="sunnyTextColor">@color/colorPrimary</item>
        <item name="sunnyTextColor2">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#aaa</item>
        <!--<item name="android:windowBackground">@color/windowsbg</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.cyb" parent="AppTheme">
        <item name="sunnyTextColor">#FFFF00</item>
        <item name="sunnyTextColor2">#aaaa00</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1099aa</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#1099aa</item>
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <!--<item name="windowNoTitle">true</item>-->
        <!--colorPrimaryDark对应状态栏的颜色-->
        <!--窗口的颜色-->
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
    </style>

</resources>
